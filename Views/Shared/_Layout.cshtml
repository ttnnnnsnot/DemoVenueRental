<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - DemoVenueRental</title>
    
    <environment names="Development">
        <!--animate-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" />

        <!--aos-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

        <!--jquery-->
        <script src="~/lib/jquery/dist/jquery.js"></script>
        
        <!--vue-->
        <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>

        <!--validate-->
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <!--bootstrap-->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

        <!--fontawesome-->
        <link rel="stylesheet" href="~/lib/fontawesome-free-6.6.0-web/css/all.css" />
        <script src="~/lib/fontawesome-free-6.6.0-web/js/all.js"></script>

        <!--my-->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/callapi.js" asp-append-version="true"></script>
    </environment>

    <environment include="Staging,Production">
        <!--animate-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

        <!--aos-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.min.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.min.js"></script>

        <!--jquery-->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <!--vue-->
        <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>

        <!--validate-->
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

        <!--bootstrap-->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

        <!--fontawesome-->
        <link rel="stylesheet" href="~/lib/fontawesome-free-6.6.0-web/css/all.min.css" />
        <script src="~/lib/fontawesome-free-6.6.0-web/js/all.min.js"></script>

        <!--vuetify-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vuetify@3.7.0/dist/vuetify.min.css" />
        <script src="https://cdn.jsdelivr.net/npm/vuetify@3.7.0/dist/vuetify.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@7.4.47/css/materialdesignicons.min.css" rel="stylesheet">

        <!--my-->
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/callapi.min.js" asp-append-version="true"></script>
    </environment>

</head>
<body>
    <div id="app">
        <header class="fixed-top" style="height:60px;">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand animate__animated animate__flipInX animate__delay-1s" asp-area="" asp-controller="Home" asp-action="Index">Demo Venue Rental</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse">
                        <ul class="navbar-nav flex-grow-1 text-center">
                            <li class="nav-item ms-sm-auto me-5" v-show="headerLinks[0]">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">找場地</a>
                            </li>
                            <li class="nav-item me-5" v-show="headerLinks[1]">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">成為場地主</a>
                            </li>
                            <li class="nav-item me-5" v-show="headerLinks[2]">
                                <a href="#" class="nav-link text-dark" v-on:click="showRegisterModal">註冊</a>
                            </li>
                            <li class="nav-item me-5" v-show="headerLinks[3]">
                                <a href="#" class="nav-link text-dark" v-on:click="showLoginModal">登入</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main role="main" class="w-100">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year.ToString() - DemoVenueRental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <div id="hideModal">
            <register-module ref="registerComponent" v-bind:on-Logged-In="LoggedIn"></register-module>
            <login-module ref="loginComponent" v-bind:on-Logged-In="LoggedIn"></login-module>
        </div>
    </div>
    
    <environment names="Development">
    </environment>

    <environment names="Production">
    </environment>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
