<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - DemoVenueRental</title>
    
    <environment names="Development">
        <!--animate-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" />

        <!--aos-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

        <!--jquery-->
        <script src="~/lib/jquery/dist/jquery.js"></script>
        
        <!--vue-->
        <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>

        <!--validate-->
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

        <!--bootstrap-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <!--fontawesome-->
        <link rel="stylesheet" href="~/lib/fontawesome-free-6.6.0-web/css/all.css" />
        <script src="~/lib/fontawesome-free-6.6.0-web/js/all.js"></script>

        <!--axios-->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <!--my-->
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/api.js" asp-append-version="true"></script>        
    </environment>

    <environment include="Staging,Production">
        <!--animate-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

        <!--jquery-->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <!--vue-->
        <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>

        <!--validate-->
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

        <!--bootstrap-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

        <!--fontawesome-->
        <link rel="stylesheet" href="~/lib/fontawesome-free-6.6.0-web/css/all.min.css" />
        <script src="~/lib/fontawesome-free-6.6.0-web/js/all.min.js"></script>

        <!--axios-->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <!--my-->
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/api.js" asp-append-version="true"></script>
    </environment>

</head>
<body>
    <div id="app">
        <header class="fixed-top">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom bg-white">
                <div class="container-fluid">
                    <a class="navbar-brand animate__animated animate__flipInX" asp-area="" asp-controller="Home" asp-action="Index">Demo Venue Rental</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <header-module></header-module>
                </div>
            </nav>
        </header>

        <main role="main" class="w-100">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year.ToString() - DemoVenueRental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <div>
            <register-module ref="registerComponent"></register-module>
            <login-module ref="loginComponent"></login-module>
        </div>
    </div>

    <partial name="_MyAlert" />

    <environment names="Development">
        <script src="~/components/myalert.js" asp-append-version="true"></script>
    </environment>

    <environment names="Production">
        <script src="~/components/myalert.js" asp-append-version="true"></script>
    </environment>

    <script>
        const noLogin = JSON.parse('@Html.Raw(TempData["NoLogined"] ?? "{}")');
        const accessDenied = JSON.parse('@Html.Raw(TempData["AccessDenied"] ?? "{}")');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
